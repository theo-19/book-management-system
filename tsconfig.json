{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": ["shared/*"]
    }
  },
  "exclude": ["node_modules", "frontend/.next", "backend/dist"]
}
